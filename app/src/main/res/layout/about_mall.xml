<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



   <android.support.v7.widget.CardView
       android:elevation="5dp"
       android:layout_margin="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       <ImageView
           android:scaleType="fitXY"
           android:id="@+id/iv_about_us_image"
           android:layout_width="match_parent"
           android:layout_height="@dimen/abtmll_image_size" />

           <LinearLayout
               android:layout_below="@+id/iv_about_us_image"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:layout_centerHorizontal="true"
               android:id="@+id/ll_about_us_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:textColor="@color/dining_color"
                   android:textSize="@dimen/abt_mall_header_text_size"
                   android:text="CELEBRATE"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:textColor="@color/entertainment_color"
                   android:textSize="@dimen/abt_mall_header_text_size"
                   android:text="  LIFE"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="@color/deals_color"
                   android:textSize="@dimen/abt_mall_header_text_size"
                   android:text="  IN"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="@color/more_color"
                   android:textSize="@dimen/abt_mall_header_text_size"
                   android:text="  COLOURS"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>


           <ScrollView
               android:id="@+id/sv_about_mall_desc"
               android:layout_below="@+id/ll_about_us_title"
               android:layout_width="match_parent"
               android:layout_height="@dimen/abtmll_desc_size">

           <TextView
               android:textSize="@dimen/abtmll_desc_text_size"
               android:text="The one mall where there will be the assured footfalls of more than 3000 residents. There will be many thousands of others too from outside who want a world class mall which offers great shopping, entertainment and recreation with multiplexes, restaurants, food courts, shopping and gaming arcades."
               android:layout_margin="10dp"
               android:id="@+id/tv_about_us_description"
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />

           </ScrollView>

           <TextView
               android:id="@+id/tv_aboutmall_howtoreach"
               android:layout_marginTop="20dp"
               android:drawablePadding="5dp"
               android:textSize="15sp"
               android:drawableTop="@drawable/markerblue"
               android:layout_marginBottom="20dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/sv_about_mall_desc"
               android:textColor="#2196F3"
               android:text="How to Reach ?"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />



       </RelativeLayout>


   </android.support.v7.widget.CardView>



</LinearLayout>