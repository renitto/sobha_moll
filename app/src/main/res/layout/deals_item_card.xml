<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#FFFFFF"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <ImageView
            android:id="@+id/iv_deal_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/deals_card__image_height" />
        <TextView
            android:visibility="gone"
            android:textSize="@dimen/home_headertab_text_size"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_deal_image"
            android:layout_gravity="bottom"
            android:text="this is the best deal"
            android:id="@+id/tv_deal_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        </RelativeLayout>





    </android.support.v7.widget.CardView>
