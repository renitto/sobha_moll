<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/banner_bg"
        android:id="@+id/rl_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_banner_height">

        <TextView
            android:textAllCaps="true"
            android:textSize="12sp"
            android:id="@+id/tv_detail_name"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/detail_head_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_slider_height"
        />







<LinearLayout
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_header_logo_height">

    <ImageView
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_detail_logo"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />




    <TextView
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingRight="20dp"
        android:id="@+id/tv_detail_brand_description"
        android:textSize="@dimen/home_headertab_text_size"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />








</LinearLayout>


        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_promo_image"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />







    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/rl_menucard_id"
        android:background="@color/light_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_headertab_height">
        <TextView
            android:textSize="@dimen/home_headertab_text_size"
            android:textColor="#FFFFFF"
            android:text="Menu Card"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@color/banner_bg"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_detail_openhours"
                    android:textSize="@dimen/hwtoreach_text_size"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_access_time_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_detail_contact_no"
                    android:textSize="@dimen/hwtoreach_text_size"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_stay_primary_portrait_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_detail_email"
                    android:textSize="@dimen/hwtoreach_text_size"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_mail_outline_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/tv_detail_web"
                    android:textSize="@dimen/hwtoreach_text_size"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_link_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



        </LinearLayout>


        <com.daimajia.slider.library.SliderLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/detail_promotion_slider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_slider_height"
            />




    </LinearLayout>

    </ScrollView>
</LinearLayout>