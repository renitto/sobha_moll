<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/banner_bg"
        android:id="@+id/rl_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_banner_height">

        <TextView

            android:textSize="@dimen/home_headertab_text_size"
            android:id="@+id/tv_detail_name"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/detail_head_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_slider_height"
        />







<LinearLayout
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_detail_logo"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/detail_header_logo_height" />

    <ScrollView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="@dimen/detail_header_logo_height">

    <TextView
        android:padding="5dp"
        android:id="@+id/tv_detail_brand_description"
        android:textSize="@dimen/home_subheader_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </ScrollView>




</LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_detail_openhours"
            android:layout_weight="1"
            android:textSize="@dimen/hwtoreach_text_size"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_clock"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_contact_no"
            android:layout_weight="1"
            android:textSize="@dimen/hwtoreach_text_size"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_mobile"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_detail_email"
            android:layout_weight="1"
            android:textSize="@dimen/hwtoreach_text_size"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_email"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_detail_web"
            android:layout_weight="1"
            android:textSize="@dimen/hwtoreach_text_size"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_web"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_menucard_id"
        android:background="@color/light_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_headertab_height">
        <TextView
            android:textSize="@dimen/home_headertab_text_size"
            android:textColor="#FFFFFF"
            android:text="Menu Card"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.daimajia.slider.library.SliderLayout
        android:layout_marginTop="10dp"
        android:id="@+id/detail_promotion_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_slider_height"
        />

        </LinearLayout>


    </LinearLayout>

    </ScrollView>
</LinearLayout>